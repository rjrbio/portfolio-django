# Ejemplo de variables de entorno
# Copia este archivo a .env y rellena con tus valores

# --- Local con Docker (rapido) ---
DEBUG=True
SECRET_KEY=dev-secret-key-change-me
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost,http://localhost:8080,http://127.0.0.1,http://127.0.0.1:8080

DB_NAME=portfolio_db
DB_USER=portfolio_user
DB_PASSWORD=portfolio_password
DB_HOST=db
DB_PORT=5432

# --- Produccion (AlwaysData) ---

# Django
DEBUG=False
SECRET_KEY=genera-una-clave-secreta-larga-aqui
ALLOWED_HOSTS=tu-dominio.alwaysdata.net
CSRF_TRUSTED_ORIGINS=https://tu-dominio.alwaysdata.net

# Base de Datos PostgreSQL
DB_NAME=nombre_base_datos
DB_USER=usuario_bd
DB_PASSWORD=contraseña_bd
DB_HOST=postgresql-host.alwaysdata.net
DB_PORT=5432
DB_SSLMODE=prefer

# Alternativa: DATABASE_URL (si prefieres usar una URL única)
# DATABASE_URL=postgresql://usuario:contraseña@host:puerto/nombre_db
